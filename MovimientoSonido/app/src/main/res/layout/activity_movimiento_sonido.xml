<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3c8dff"
    >

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Z: "
        android:id="@+id/txtAccZ"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:layout_below="@+id/txtAccY"
        android:layout_alignLeft="@+id/txtAccY"
        android:layout_alignStart="@+id/txtAccY"
        android:layout_marginTop="25dp"
        android:background="#1076cd" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Y: "
        android:id="@+id/txtAccY"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:background="#1076cd"
        android:layout_below="@+id/txtAccX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="X: "
        android:id="@+id/txtAccX"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:background="#1076cd"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtAccY"
        android:layout_alignStart="@+id/txtAccY"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/txtAccZ"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/latigazo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />
</RelativeLayout>